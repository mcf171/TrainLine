<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="testquestion" namespace="/admin" extends="system">
		
		<action name="getQuestionsPage" class="testquestionAction" method="getQuestionsPage">
			<result>/WEB-INF/jsp/backend/testQuestion/manage-questions.jsp</result>
		</action>
		
		<action name="getQuestions" class="testquestionAction" method="getQuestions">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="getAddQuestionPage" class="testquestionAction" method="getAddQuestionPage">
			<result>/WEB-INF/jsp/backend/testQuestion/manage-questionItemAdd.jsp</result>
		</action>
		
		<action name="addTestquestion" class="testquestionAction" method="addTestquestion">
				<result type="redirectAction">
					<param name="actionName">getExaminations</param>
				</result>
		</action>
		
		<action name="deleteTestquestion" class="testquestionAction" method="deleteTestquestion">
				<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name ="getTestquestionById" class="testquestionAction" method="getTestquestionById">
			<result>/WEB-INF/jsp/backend/testQuestion/manage-questionItemShow.jsp</result>
		</action>
		
		<action name ="getTestquestionModifyPage" class="testquestionAction" method="getTestquestionModifyPage">
			<result>/WEB-INF/jsp/backend/testQuestion/manage-questionItemModify.jsp</result>
		</action>
		
		
	</package>
	
	<package name="adminTestQuestion" namespace="/admin/testQuestion" extends="system">
	
		<action name="batchUpload" class="testquestionAction" method="batchUpload">
			<result>/utill.jsp</result>
		</action>
		
		<action name="batchDelete" class="testquestionAction" method="batchDelete">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
	</package>
</struts>    
