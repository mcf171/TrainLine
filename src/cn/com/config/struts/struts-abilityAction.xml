<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="ability" namespace="/" extends="system">
		
	</package>

	<package name="abilityAdmin" namespace="/admin" extends="system">
		
		<action name="addAbility" class="abilityAction" method="addAbility">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="deleteAbility" class="abilityAction" method="deleteAbility">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="getModifyAbilityPage" class="abilityAction" method="getModifyAbilityPage">
			<result>/WEB-INF/jsp/backend/ability/modifyAbility.jsp</result>
		</action>
		
		<action name="modifyAbility" class="abilityAction" method="modifyAbility">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="getAbilityManagerPage" class="abilityAction" method="getAbilityManagerPage">
			<result>/WEB-INF/jsp/backend/ability/ability.jsp</result>
		</action>
		
		<action name="getAddAbilityPage" class="abilityAction" method="getAddAbilityPage">
			<result>/WEB-INF/jsp/backend/ability/addAbility.jsp</result>
		</action>
		
		<action name="getAllAbilitys" class="abilityAction" method="getAllAbilitys">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="getAbilityLevel" class="abilityAction" method="getAbilityLevel">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
	</package>

</struts>    
