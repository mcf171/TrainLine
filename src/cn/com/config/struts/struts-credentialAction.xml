<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="credential" namespace="/" extends="json-default">
		
		
	</package>
	
	<package name="credentialAdmin" namespace="/admin" extends="system">
		<action name="intoCertificatePage" class="credentialAction" method="intoCertificatePage">
			<result>/WEB-INF/jsp/backend/classes/certificateList.jsp</result>
		</action>
		<action name="getAddCertificatePage" class="credentialAction" method="getAddCertificatePage">
			<result>/WEB-INF/jsp/backend/classes/addCertificate.jsp</result>
		</action>
		<action name="addCertifiacate" class="credentialAction" method="addCertifiacate">
			<result >/WEB-INF/jsp/backend/classes.jsp</result>
		</action>
		<action name="findAllCredential" class="credentialAction" method="findAllCredential">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="showCredential" class="credentialAction" method="showCredential">
			<result>/WEB-INF/jsp/backend/classes/showCertificate.jsp</result>
		</action>
		<action name="getUpadteCredentialPage" class="credentialAction" method="getUpadteCredentialPage">
			<result>/WEB-INF/jsp/backend/classes/updateCertificate.jsp</result>
		</action>
		<action name="updateCredential" class="credentialAction" method="updateCredential">
			<result >/WEB-INF/jsp/backend/classes.jsp</result>
		</action>
		<action name="deleteCredential" class="credentialAction" method="deleteCredential">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
	</package>
</struts>    
