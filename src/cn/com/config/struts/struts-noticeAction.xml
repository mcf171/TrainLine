<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="notice" namespace="/" extends="system">
	
		<action name="getNoticeContent" method="getNoticeContent" class="noticeAction">
			<result>/WEB-INF/jsp/content.jsp</result>		
		</action>
		<action name="getAllNormalKechengGongGao" method="getAllNormalKechengGongGao" class="noticeAction">
			<result>/WEB-INF/jsp/noticeResult.jsp</result>		
		</action>
		<action name="getAllNormalKaoShiGongGao" method="getAllNormalKaoShiGongGao" class="noticeAction">
			<result>/WEB-INF/jsp/noticeResult.jsp</result>		
		</action>
		<action name="getHomeNotice" method="getHomeNotice" class="noticeAction">
			<result>/WEB-INF/jsp/home.jsp</result>
		</action>
	</package>
	
	<package name="noticeAdmin"  extends="system" namespace="/admin">
	
		<action name="addNotice" class="noticeAction" method="addNotice">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="getModifyNoticePage" class="noticeAction"  method="getModifyNoticePage">
			<result>/WEB-INF/jsp/backend/news/noticeModify.jsp</result>
		</action>
		<action name="modifyNotice" class="noticeAction"  method="modifyNotice">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="deleteNotice" class="noticeAction"  method="deleteNotice">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
	</package>
	 
</struts>    
