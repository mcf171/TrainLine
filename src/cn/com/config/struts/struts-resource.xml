<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="resource" extends="system" namespace="/">
		<action name="getInsideResourceList" class="resourceAction"
			method="getInsideResourceList">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="showBackendResourceListPage" class="resourceAction"
			method="showBackendResourceListPage">
			<result>/WEB-INF/jsp/backend/resource.jsp</result>
		</action>
		<action name="showBackendInsideResourceListPage" class="resourceAction"
			method="showBackendInsideResourceListPage">
			<result>/WEB-INF/jsp/backend/resources/videoManager.jsp</result>
		</action>
		
		
		
	</package>
	<package name="resourceAdmin" extends="system" namespace="/admin">
		<action name="getBackendShiPingResource" class="resourceAction" method="getBackendShiPingResource">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="getBackendWenDangResource" class="resourceAction" method="getBackendWenDangResource">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="getBackendDongTaiResource" class="resourceAction" method="getBackendDongTaiResource">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		<action name="showBackendDocResourcePage" class="resourceAction" method="showBackendDocResourcePage">
			<result >/WEB-INF/jsp/backend/resources/docManager.jsp</result>
		</action>
		<action name="showBackendDongTaiResourcePage" class="resourceAction" method="showBackendDongTaiResourcePage">
			<result >/WEB-INF/jsp/backend/resources/flashManager.jsp</result>
		</action>
		<action name="showBackendVideoResourcePage" class="resourceAction" method="showBackendVideoResourcePage">
			<result>/WEB-INF/jsp/backend/resources/videoManager.jsp</result>
		</action>
		
		<action name="getUpdateResoucePage" class="resourceAction" method="getUpdateResoucePage">
			<result>/WEB-INF/jsp/backend/resources/updateResource.jsp</result>
		</action>
		
		<action name="getAddResourcePage" class="resourceAction" method="getAddResourcePage">
			<result>/WEB-INF/jsp/backend/resources/addResource.jsp</result>
		</action>
		
		<action name="updateResource" class="resourceAction" method="updateResource">
			<result>/utill.jsp</result>
			<interceptor-ref name="fileUpload">
                <!-- 文件过滤 -->
				<param name="allowedTypes">
				video/mpeg4,
				application/vnd.ms-excel,application/msword,  
                application/vnd.ms-powerpoint,text/plain,application/pdf,  
                application/vnd.openxmlformats-officedocument.wordprocessingml.document,  
                application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,  
                application/vnd.openxmlformats-officedocument.presentationml.presentation,
				image/bmp,image/x-png,image/gif,image/pjpeg
				</param>
                <!-- 文件大小, 以字节为单位 -->
                <param name="maximumSize">1000000000</param>
            </interceptor-ref>
            <!-- 默认拦截器必须放在fileUpload之后，否则无效 -->
            <interceptor-ref name="mydefault" />
		</action>
		
		<action name="addResource" class="resourceAction" method="addResource">
			<result>/utill.jsp</result>
			<interceptor-ref name="fileUpload">
                <!-- 文件过滤 -->
				<param name="allowedTypes">
				video/mpeg4,
				application/vnd.ms-excel,application/msword,  
                application/vnd.ms-powerpoint,text/plain,application/pdf,  
                application/vnd.openxmlformats-officedocument.wordprocessingml.document,  
                application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,  
                application/vnd.openxmlformats-officedocument.presentationml.presentation,
				image/bmp,image/x-png,image/gif,image/pjpeg
				</param>
                <!-- 文件大小, 以字节为单位 -->
                <param name="maximumSize">1000000000</param>
            </interceptor-ref>
            <!-- 默认拦截器必须放在fileUpload之后，否则无效 -->
            <interceptor-ref name="mydefault" />
		</action>
		
		<action name="deleteResource" class="resourceAction" method="deleteResource">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		
		
	</package>
</struts>    
