<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 系统管理 -->
	<package name="system" extends="json-default" namespace="/system">

		<interceptors>


			<!-- 后台登陆验证拦截 -->
			<interceptor name="globalnterceptor"
				class="cn.com.interceptor.GlobalInterceptor">
			</interceptor>
			<!-- 拦截器栈的配置 -->

			<interceptor-stack name="mydefault">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="globalnterceptor" />
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="mydefault"></default-interceptor-ref>
		
		<!-- 全局结果 -->
		<global-results>
			<result name="login">/login.jsp</result>
			<!-- <result name="error">/WEB-INF/jsp/common/Error.jsp</result> -->
		</global-results>

	</package>

</struts>    
