<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	
	<package name="user" extends="system" >
	
		<action name="getUserInfoPage" class="userAction" method="getUserInfoPage">
			<result>/WEB-INF/jsp/userInfo.jsp</result>
		</action>
		
		<action name="checkUser" class="userAction" method="checkUser">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
   		<action name="login" class="userAction" method="login">
   			<result>/utill.jsp</result>
   		</action>
   		
   		<action name="getIndex" class="userAction" method="getIndex">
   			<result>/WEB-INF/jsp/index.jsp</result>
   		</action>
   		
   		<action name="logout"	class="userAction"	method="logout">
   		
   		</action>
   		
   		<action name="getBackendIndex" class="userAction" method="getBackendIndex">
   			<result>/WEB-INF/jsp/backend/index.jsp</result>
   		</action>
   		
   		<action name="goToJform" class="userAction" method="goToJform">
   			<result type="redirect">
   				<param name="location">${rootPath}/jforum</param>
   				<param name="module">user</param>
   				<param name="action">validateLogin</param>
   				<param name="username">${user.userName}</param>
   				<param name="password">${user.userPassword}</param>
   				<param name="login">%E7%99%BB%E5%85%A5</param>
   			</result>
   		</action>
   		
   	</package>
   	
   	<package name="userAdmin" extends="system" namespace="/admin">
   		
   		<action name="getAllUser" class="userAction" method="getAllUser">
   			<result type="json">
   				<param name="root">dataMap</param>
   			</result>
   		</action>
   		
   		<action name="addUser" class="userAction" method="addUser">
   			<result>/utill.jsp</result>
   		</action>
   	
   	</package>
   	
   		<package name="adminUser" extends="system" namespace="/admin/user">
	   	
	   		<action name="batchUploadUser" class="userAction" method="batchUploadUser">
	   			<result>/utill.jsp</result>
	   		</action>
	   		
	   		<action name="deleteUser" class="userAction" method="deleteUser">
	   			<result type="json">
	   				<param name="root">dataMap</param>
	   			</result>
	   		</action>
	   		
   		</package>
</struts>    
